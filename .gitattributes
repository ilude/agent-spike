# Encrypt sensitive files with git-crypt
.env filter=git-crypt diff=git-crypt
*.key filter=git-crypt diff=git-crypt
*.pem filter=git-crypt diff=git-crypt
secrets/** filter=git-crypt diff=git-crypt

# Encrypt data storage (Qdrant collections, YouTube archives, brave history)
compose/data/qdrant/** filter=git-crypt diff=git-crypt
compose/data/archive/** filter=git-crypt diff=git-crypt
compose/data/queues/brave_history/** filter=git-crypt diff=git-crypt

# Handle line endings
* text=auto
*.sh text eol=lf
*.py text eol=lf
*.md text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
Makefile text eol=lf
